[connection]
id=<%= @id %>
uuid=<%= @uuid %>
type=vpn
<% if @_permitted_user.nil? -%>
permissions=
<% else -%>
permissions=user:<%= @_permitted_user %>:;
<% end -%>
<% if @autoconnect -%>
autoconnect=true
<% else -%>
autoconnect=false
<% end -%>

[vpn]
service-type=org.freedesktop.NetworkManager.openvpn
remote=<%= @remote %>
connection-type=<%= @connection_type %>
<% if @remote_random -%>
remote-random=yes
<% elsif !@remote_random.nil? -%>
remote-random=no
<% end -%>
<% if @connection_type.include? "tls" -%>
<%   if !@cert.nil? -%>
cert=<%= @cert %>
<%   end -%>
<%   if !@key.nil? -%>
key=<%= @key %>
<%   end -%>
<%   if !@cert_pass_flags.nil? -%>
cert-pass-flags=<%= @cert_pass_flags %>
<%   else -%>
cert-pass-flags=0
<%   end %>
<% end -%>
<% if @connection_type.include? "password" -%>
<%   if !@_username.nil? -%>
username=<%= @_username %>
<%   end -%>
<%   if !@password_flags.nil? -%>
password-flags=<%= @password_flags %>
<%   else -%>
password-flags=2
<%   end -%>
<% end -%>
<% if !@hmac.nil? -%>
auth=<%= @hmac %>
<% end -%>
<% if !@cipher.nil? -%>
cipher=<%= @cipher %>
<% end -%>
<% if @comp_lzo -%>
comp-lzo=yes
<% elsif !@comp_lzo.nil? -%>
comp-lzo=no
<% end -%>
<% if !@ca.nil? -%>
ca=<%= @ca %>
<% end -%>
<% if !@ta.nil? -%>
ta=<%= @ta %>
<% end -%>
<% if !@ta_dir.nil? -%>
ta-dir=<%= @ta_dir %>
<% end -%>
<% if !@dev_type.nil? -%>
dev-type=<%= @dev_type %>
<% end -%>

[ipv4]
method=<%= @ipv4_method %>
<% if !@routes.nil? -%>
routes1=<%= @routes %>
<% end -%>
<% if !@dns.nil? -%>
dns=<%= @dns %>
<% end -%>
<% if !@dns_search.nil? -%>
dns-search=<%= @dns_search %>
<% else -%>
dns-search=
<% end -%>
<% if !@never_default.nil? -%>
never-default=<%= @never_default %>
<% end -%>

[ipv6]
method=ignore
